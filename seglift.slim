s1 fitness(NULL) { //summer
	gnm1 = genome1.mutationsOfType(m2);
	gnm2 = genome2.mutationsOfType(m2);
	ns = sum(match(gnm1, gnm2)>=0); //homozygosity
	nhet = size(gnm1) + size(gnm2) - 2 * ns;  // heterozygosity
	zs = ns + (d * nhet);
	
	return (1 + zs)^y;
}

s2 fitness(NULL) { //winter
	gnm1 = genome1.mutationsOfType(m2);
	gnm2 = genome2.mutationsOfType(m2);
	ns = sum(match(gnm1, gnm2)>=0); //homozygosity
	nhet = size(gnm1) + size(gnm2) - 2 * ns;  // heterozygosity
	nw = L-(ns+nhet);
	zw = nw + (d * nhet);
	
	return (1 + zw)^y;
}

